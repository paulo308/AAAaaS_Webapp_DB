{% extends "base_template.jinja2" %}


{% set description = 'Home Page' %}
{% set title = 'EUBra-BIGSEA' %}

{% block scripts %}
    {{ super() }}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="/static/js/manage_info_user.js"></script>
    <script src="/static/js/parsley.min.js"></script>
{% endblock %}

{% block styles %}
    {{ super() }}
{% endblock %}

{% block main_content %}

<html>
<head>
<meta charset="utf-8">
<title>EUBra-BIGSEA Account Management</title>
<style type="text/css">
body {
background-color: #f4f4f4;
color: #5a5656;
font-family: 'Open Sans', Arial, Helvetica, sans-serif;
font-size: 16px;
line-height: 1.5em;
}
a { text-decoration: none; }
h1 { font-size: 1em; }
h1, p {
margin-bottom: 10px;
}
strong {
font-weight: bold;
}
.uppercase { text-transform: uppercase; }

/* ---------- LOGIN ---------- */
#login {
margin: 50px auto;
width: 300px;
}
form fieldset input[type="text"], input[type="password"],input[type="email"] {
background-color: #e5e5e5;
border: none;
border-radius: 3px;
-moz-border-radius: 3px;
-webkit-border-radius: 3px;
color: #5a5656;
font-family: 'Open Sans', Arial, Helvetica, sans-serif;
font-size: 14px;
height: 50px;
outline: none;
padding: 0px 10px;
width: 300px;
-webkit-appearance:none;
}
form fieldset input[type="submit"] {
background-color: #008dde;
border: none;
border-radius: 3px;
-moz-border-radius: 3px;
-webkit-border-radius: 3px;
color: #f4f4f4;
cursor: pointer;
font-family: 'Open Sans', Arial, Helvetica, sans-serif;
height: 50px;
text-transform: uppercase;
width: 300px;
-webkit-appearance:none;
}

form fieldset a {
color: #5a5656;
font-size: 10px;
}
form fieldset a:hover { text-decoration: underline; }
.btn-round {
background-color: #5a5656;
border-radius: 50%;
-moz-border-radius: 50%;
-webkit-border-radius: 50%;
color: #f4f4f4;
display: block;
font-size: 12px;
height: 50px;
line-height: 50px;
margin: 30px 125px;
text-align: center;
text-transform: uppercase;
width: 50px;
}
.google-before {
background-color: #0064ab;
border-radius: 3px 0px 0px 3px;
-moz-border-radius: 3px 0px 0px 3px;
-webkit-border-radius: 3px 0px 0px 3px;
<fieldset>color: #f4f4f4;
display: block;
float: left;
height: 50px;
line-height: 50px;
text-align: center;
width: 50px;
}
.google {
background-color: #0079ce;
border: none;
border-radius: 0px 3px 3px 0px;
-moz-border-radius: 0px 3px 3px 0px;
-webkit-border-radius: 0px 3px 3px 0px;
color: #f4f4f4;
cursor: pointer;
height: 50px;
text-transform: uppercase;
width: 250px;
}

</style>
</head>
<body>
<div id="login">
<h1><strong>Account Management</strong><br><br>
Update your information and click "Save".</h1>
<font size="2"><p>If you need to change username, sign up for a new account and delete this one.</p>

<form data-parsley-validate name="updateform" id="updateform" action="javascript:void(0);" method="get">
<fieldset>
			<p>
				<label for="user">Username (not possible to change):</label>
				<input name="user" id="user" type="text" disabled/>
			</p>
			<p>
				<label for="email">E-Mail:</label>
				<input name="email" id="email" maxlength="1024" type="email" data-parsley-trigger="change" required/>
                        </p>
                        <p>
				<label for="fname">First Name:</label>
				<input name="fname" id="fname" maxlength="32" type="text" required/>
                        </p>
                        <p>
				<label for="lname">Last Name:</label>
				<input name="lname" id="lname" maxlength="32" type="text" required />
                        </p>
<p><input id="btn_save" type="submit" value="Save"></p>
<!--
<font size="2"><p>Changes only take effect after clicking "Save" button and present confirmation.</p>
-->
</fieldset>
</form>

<hr>

<h1>To add a secondary email to your account, please introduce it and click "Add Email".</h1>

<form data-parsley-validate name="addemailform" id="addemailform" action="javascript:void(0);" method="get">
<fieldset>
			<p>
				<label for="secemail">E-Mail:</label>
				<input name="secemail" id="secemail" maxlength="1024" type="email" data-parsley-trigger="change" required/>
                        </p>
<p><input id="btn_addemail" type="submit" value="Add Email"></p>
</fieldset>
</form>


<hr>

<h1>To change password introduce your old and new password and click "Change Password".</h1>

<form data-parsley-validate name="passwordform" id="passwordform" action="javascript:void(0);" method="get">
<fieldset>
                        <p>
                                <label for="pwd">Old Password:</label>
                                <input name="pwd" id="pwd" type="password" required/>
                        </p>
				<label for="password1">New Password:</label>
				<input name="password1" id="password1" data-parsley-pattern="^[A-Za-z0-9_-]{8,30}$" data-parsley-length="[8, 30]" type="password" data-parsley-equalto="#password2" data-parsley-error-message="Passwords must match. Needs to have at least 8 characters. It should include uppercase letters, lowercase letters and numbers." required/>
                        </p>
                        <p>
				<label for="password2">Confirm Your New Password:</label>
				<input name="password2" id="password2" data-parsley-length="[8, 30]" data-parsley-error-message="Passwords must match. Needs to have at least 8 characters. It should include uppercase letters, lowercase letters and numbers." data-parsley-pattern="^[A-Za-z0-9_-]{8,30}$" type="password" data-parsley-equalto="#password1" required/>
                        </p>
<p><input id="btn_changepassword" type="submit" value="Change Password"></p>
</fieldset>
</form>

<hr>

<form>
<fieldset>

<h1>To permanently delete your account click "Delete Account".</h1>

<p><input id="btn_delete" type="submit" value="Delete Account" style=background-color:red></p>
</fieldset>
</form>

<div id="error" class="alert alert-danger alert-dismissable">
</div>
<div id="success" class="alert alert-success alert-dismissable">
</div>

</body>
</html>
{% endblock %}

